<body>

<div class="container">
  <h1>搜尋結果過濾系統</h1>

  <div class="search-box">
    <input id="keyword" placeholder="輸入搜尋關鍵字">
    <button onclick="search()">搜尋</button>
  </div>

  <div class="history">
    <strong>搜尋紀錄：</strong>
    <span id="history"></span>
  </div>

  <div class="results" id="results"></div>
  <div class="pagination" id="pagination"></div>
</div>

<script>
  const data = [
    "JavaScript 搜尋過濾實作教學",
    "HTML 與 CSS 網頁設計",
    "Python 資料分析與搜尋",
    "旅遊推薦：日本自由行",
    "JavaScript 關鍵字比對與排序",
    "台北美食餐廳推薦",
    "前端工程師學習路線",
    "後端 API 搜尋設計原則"
  ];

  const stopWords = ["的","是","在","與","和","了"];
  const pageSize = 3;
  let currentPage = 1;
  let currentResults = [];

  function tokenize(text) {
    return text.toLowerCase().split(/\s+/).filter(w => !stopWords.includes(w));
  }

  function relevanceScore(tokens, text) {
    return tokens.reduce((score, t) => text.includes(t) ? score + 1 : score, 0);
  }

  function search() {
    const keyword = document.getElementById("keyword").value.trim();
    if (!keyword) return;

    saveHistory(keyword);

    const tokens = tokenize(keyword);
    currentResults = data
      .map(text => ({ text, score: relevanceScore(tokens, text.toLowerCase()) }))
      .filter(r => r.score > 0)
      .sort((a,b) => b.score - a.score);

    currentPage = 1;
    render();
  }

  function render() {
    const resultsDiv = document.getElementById("results");
    const paginationDiv = document.getElementById("pagination");
    resultsDiv.innerHTML = "";
    paginationDiv.innerHTML = "";

    if (currentResults.length === 0) {
      resultsDiv.innerHTML = "沒有相關資料";
      return;
    }

    const start = (currentPage - 1) * pageSize;
    const pageItems = currentResults.slice(start, start + pageSize);

    pageItems.forEach(item => {
      const div = document.createElement("div");
      div.className = "item";
      div.innerHTML = `
        ${item.text}
        <div class="score">相關度：${item.score}</div>
      `;
      resultsDiv.appendChild(div);
    });

    const totalPages = Math.ceil(currentResults.length / pageSize);
    for (let i = 1; i <= totalPages; i++) {
      const btn = document.createElement("button");
      btn.textContent = i;
      btn.onclick = () => { currentPage = i; render(); };
      paginationDiv.appendChild(btn);
    }
  }

  function saveHistory(keyword) {
    let history = JSON.parse(localStorage.getItem("history") || "[]");
    if (!history.includes(keyword)) {
      history.unshift(keyword);
      if (history.length > 5) history.pop();
      localStorage.setItem("history", JSON.stringify(history));
    }
    renderHistory();
  }

  function renderHistory() {
    const history = JSON.parse(localStorage.getItem("history") || "[]");
    document.getElementById("history").innerHTML = history
      .map(h => `<button onclick="quickSearch('${h}')">${h}</button>`)
      .join(" ");
  }

  function quickSearch(word) {
    document.getElementById("keyword").value = word;
    search();
  }

  renderHistory();
</script>

</body>
</html>
